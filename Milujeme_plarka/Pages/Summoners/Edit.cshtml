@page
@model Milujeme_plarka.Pages.Summoners.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editace sarmnera</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Summoner.SummonerId" />
            <div class="form-group">
                <label asp-for="@Model.Summoner.SummonerName"></label>
                <input asp-for="@Model.Summoner.SummonerName" class="form-control" />
                <span asp-validation-for="@Model.Summoner.SummonerName" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Uložit</button> <a class="btn" asp-page="Index">Zpět</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@page
@model Milujeme_plarka.Pages.Roles.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h2>Seznam rolí uživatelů</h2>
<p>@Model.StatusMessage</p>
<div><a class="btn btn-success m-1" asp-page="./Create">Nová</a></div>
@if (Model.Roles.Count == 0)
{
    <p>Žádné role nejsou.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Název</th>
                <th>Akce</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-page="./Details" asp-route-id="@role.Id">Podrobnosti</a>
                        <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@role.Id">Upravit</a>
                        <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@role.Id">Odstranit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

